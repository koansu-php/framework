{
  "name": "koansu/framework",
  "description": "A framework for professional php developers",
  "minimum-stability": "stable",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Michael Tils",
      "email": "mtils@web-utils.de"
    }
  ],
  "support": {
    "issues": "https://github.com/koansu-php/framework/issues",
    "source": "https://github.com/koansu-php/framework"
  },
  "require": {
    "php": ">=7.2.0",
    "psr/http-message": "1.*",
    "psr/http-server-middleware": "1.*",
    "psr/log": "~1.0",
    "psr/container": "1.*|2.0.*",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-ctype": "*",
    "ext-mbstring": "*"
  },
  "replace": {
    "koansu/core": "self.version",
    "koansu/dependeny-injection": "self.version",
    "koansu/testing": "self.version"
  },
  "require-dev": {
    "phpunit/phpunit": "6.*|7.*|8.*|9.*",
    "mockery/mockery": "~1.3",
    "nikic/fast-route": "1.3.*",
    "fakerphp/faker": "^1.16"
  },
  "autoload": {
    "psr-4": {
      "Koansu\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Koansu\\Tests\\": "tests/unit"
    }
  }
}